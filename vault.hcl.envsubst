default_max_request_duration = "90s"
disable_clustering           = true
disable_mlock                = true
ui                           = true

listener "tcp" {
  address     = "0.0.0.0:${PORT}"
  tls_disable = "true"
}

seal "gcpckms" {
  key_ring   = "${VAULT_KEY_RING}"
  crypto_key = "${VAULT_CRYPTO_KEY}"
  region     = "global"
}

storage "gcs" {
  ha_enabled = "false"
}
